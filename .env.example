# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@example.com

# Report Configuration
REPORT_TITLE=Document Analysis Report

# Mode: debug (doesn't update synthesized flag) or production (updates synthesized flag)
MODE=debug

# Filter Configuration
# Number of days to look back for research documents (default: 7)
DATE_RANGE_DAYS=7

# Comma-separated list of sources to filter by (empty = all sources)
# Example: FILTER_SOURCES=Goldman Sachs,JP Morgan,Barclays
FILTER_SOURCES=

# Filter by region from document metadata (empty = all regions)
# Options: US, EU, UK, Japan, China, EM, Global
FILTER_REGION=

# Filter by asset focus from document metadata (empty = all assets)
# Options: rates, credit, FX, equities, commodities, multi-asset
FILTER_ASSET_FOCUS=

# Country for economic and supply calendar events (default: US)
CALENDAR_COUNTRY=US
