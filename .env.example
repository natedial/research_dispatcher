# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# LLM Configuration (for cross-document synthesis)
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...  # Optional, only if using OpenAI models

# Enable/disable synthesis (default: true)
ENABLE_SYNTHESIS=true

# Use skill-based two-stage pipeline instead of monolithic prompt (default: false)
# false = single LLM call with prompts/synthesis.md
# true = two-stage: throughline-synthesizer -> callout-extractor
USE_SKILL_PIPELINE=false

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
# Single recipient or comma-separated list
# Example: EMAIL_TO=alice@example.com, bob@example.com
EMAIL_TO=recipient@example.com

# Report Configuration
REPORT_TITLE=Document Analysis Report

# Mode: debug (doesn't update synthesized flag) or production (updates synthesized flag)
MODE=debug

# Filter Configuration
# Number of days to look back for research documents (default: 7)
DATE_RANGE_DAYS=7

# Comma-separated list of sources to filter by (empty = all sources)
# Example: FILTER_SOURCES=Goldman Sachs,JP Morgan,Barclays
FILTER_SOURCES=

# Filter by region from document metadata (empty = all regions)
# Options: US, EU, UK, Japan, China, EM, Global
FILTER_REGION=

# Filter by asset focus from document metadata (empty = all assets)
# Options: rates, credit, FX, equities, commodities, multi-asset
FILTER_ASSET_FOCUS=

# Country for economic and supply calendar events (default: US)
CALENDAR_COUNTRY=US

# Interactive Links (Feedback and Document Viewer)
# Enable clickable links in PDF for feedback and viewing full document text
# Requires deploying Supabase Edge Functions (see supabase/functions/)
FEEDBACK_ENABLED=false
